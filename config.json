{
  "name": "TCPModbus Solar Inverter",
  "version": "1.0.3",
  "slug": "modbus_inverter",
  "description": "Sungrow-SMA inverter communication Addon",
  "url": "https://github.com/TenySmart/ModbusTCP2MQTT",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "services": [
    "mqtt:need"
  ],
  "startup": "application",
  "boot": "auto",
  "options": {
    "inverter_ip": "192.168.0.8",
    "inverter_port": 502,
    "model": "sungrow-sg10kt",
    "timeout": 5,
    "scan_interval" : 20,
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_username": "",
    "mqtt_password": "",
    "log_level": "INFO"
  },
  "schema": {
    "inverter_ip": "str",
    "inverter_port": "int?",
    "model": "list(sma-SBn_n-1AV-40|sungrow-sg3kd|sungrow-sg3ks|sungrow-sg5kd|sungrow-sg8kd|sungrow-sg10kt|sungrow-sg10rt|sungrow-sh5k)?",
    "timeout" : "int(3,60)?",
    "scan_interval" : "int(10,300)?",
    "mqtt_host" : "str",
    "mqtt_port": "int",
    "mqtt_username": "str",
    "mqtt_password": "str",
    "log_level": "list(DEBUG|INFO|WARNING)?"
  }
}